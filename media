n1 = float(input('Primeira nota: '))
n2 = float(input('Segunta nota: '))
media = (n1 + n2) / 2
if media < 5:
    print(f'Quem tirou {n1} na primeira prova e {n2} na segunda nota está com a média de {media:.1f}')
    print('REPROVADO')
elif media == 5 or media < 6.9:
    print(f'Quem tirou {n1} na primeira prova e {n2} na segunda nota está com a média de {media:.1f}')
    print('RECUPERAÇÃO')
elif media > 7:
    print(f'Quem tirou {n1} na primeira prova e {n2} na segunda nota está com a média de {media:.1f}')
    print('APROVADO')
